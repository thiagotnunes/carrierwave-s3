<p>
  <h1>Listing products</h1>
</p>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><img src="<%= product.image.thumb.url %>"/></td>
    <td><%= link_to 'Show', product, :class => 'btn' %></td>
    <td><%= link_to 'Edit', edit_product_path(product), :class => 'btn' %></td>
    <td><%= link_to 'Destroy', product, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path, :class => 'btn btn-primary' %>
